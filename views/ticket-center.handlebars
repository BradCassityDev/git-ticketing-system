<header>
  {{> navbar}}
  <h2 class="page-title">Admin Console</h2>
</header>

<div class="admin-container">
  <div class="row">
    <div class="col-12 col-md-3">
      {{> admin-menu}}
    </div>
    <div class="col-12 col-md-9">
      <div class="row">
        <div class="col-12">
          <h4 class="float-left">Tickets</h4>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-12">
          <!-- Ticket Table -->
          <table class="table">
            <thead class="thead-light">
              <th>ID</th>
              <th>Ticket Title</th>
              <th>Ticket Description</th>
              <th>Assign Issue ID</th>
              <th></th>
            </thead>
            <tbody>
              {{#each tickets as |ticket|}}
              <tr>
                <td>{{ticket.id}}</td>
                <td>{{ticket.title}}</td>
                <td>{{ticket.description}}</td>
                <td>{{ticket.issue_id}}</td>
                <td><a href="/admin/ticket/{{ticket.id}}" class="btn btn-light">Edit</a></td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>