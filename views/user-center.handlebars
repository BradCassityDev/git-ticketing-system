<header>
  {{> navbar}}
  <h2 class="page-title">Admin Console</h2>
</header>

<div class="admin-container">
  <div class="row">
    <div class="col-12 col-md-3">
      {{> admin-menu}}
    </div>
    <div class="col-12 col-md-9">
      <div class="row">
        <div class="col-12">
          <h4 class="float-left">Users</h4>
          <button class="btn btn-secondary float-right" id='create-user-modal-btn' data-toggle="modal"
            data-target="#create-user-modal">+ Add User</button>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-12">
          <!-- Users Table -->
          <table class="table">
            <thead class="thead-light">
              <th>ID</th>
              <th>Username</th>
              <th class="d-none d-sm-table-cell">Role</th>
              <th class="d-none d-sm-table-cell">User State</th>
              <th class="d-none d-sm-table-cell">Team</th>
              <th></th>
            </thead>
            <tbody>
              {{#each users as |user|}}
              <tr>
                <td>{{user.id}}</td>
                <td>{{user.username}}</td>
                <td class="d-none d-sm-table-cell">{{user.role.name}}</td>
                <td class="d-none d-sm-table-cell">{{user.user_state.name}}</td>
                <td class="d-none d-sm-table-cell">{{user.team.name}}</td>
                <td><a href="/admin/user/{{user.id}}" class="btn btn-secondary">Edit</a></td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Create User Modal -->
<div class="modal fade" id="create-user-modal" tabindex="-1" role="dialog" aria-labelledby="create-user-modal"
  aria-hidden="true">
  <div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Create User</h4>
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span
              class="sr-only">Close</span></button>
        </div>
        <div class="modal-body">
          <form id="create-user-form">
            <div class="form-group">
              <label for="create-user-username">Username:</label>
              <input type="text" class="form-control" name="create-user-username" id="create-user-username">
            </div>
            <div class="form-group">
              <label for="create-user-email">Email:</label>
              <input type="text" class="form-control" name="create-user-email" id="create-user-email">
            </div>
            <div class="form-group">
              <label for="create-user-phone">Phone:</label>
              <input type="text" class="form-control" name="create-user-phone" id="create-user-phone">
            </div>
            <div class="form-group">
              <label for="create-user-password">Password:</label>
              <input type="password" class="form-control" name="create-user-password" id="create-user-password">
            </div>
            <button type="submit" id="create-user-btn" class="btn btn-secondary">Create User</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


<script src="/javascript/create-user.js"></script>